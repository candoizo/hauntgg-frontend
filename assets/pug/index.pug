  .itemlist.my-6#list

    a(href="/portals/closed/").itemcard.closed.flex-reverse.justify-between

      img.mainimg(src="/aavegotchi_images/portal_sealed_optimized.svg", width=60, height=60)

      .flex.flex-col.justify-around.ml-1

        h3.font-semibold.uppercase.text-xl Closed Portals
        //- div Owner
        .flex.flex-row.justify-between.w-full
          //- #haunt ðŸ‘» Haunt:
          .flex
            img.sprite(src="/aavegotchi_images/ghsttoken.png", width=20, height=20)
            #price.
              {{ $data := getJSON "data/portals/closed/latest.json" }}
              {{ $min := $data.min_price }}
              {{ $max := $data.max_price }}

              {{ if gt $max 9999 }}

              {{ $a := div $max 1000 }}
              {{ $b := math.Round $a  }}
              {{ $c := mul $a 100  }}
              {{ $d := math.Round $c  }}
              {{ $min }} - {{div $d 100}}K

              {{ else }}

              {{ $min }} - {{ $max }}

              {{ end }}

