.flex.flex-col.my-4
  
  input(onkeyup="search_filter(this.value)", placeholder="Search", type="Search").search
  
  .checkbox.my-auto
    input#invert.form-checkbox.my-auto.border-pink-400.rounded.border.mx-4(type='checkbox' onchange='wearables_resort()')
    span Reverse Sort
    
  .sortbox
    
    p Sort
    select#sort(onchange="wearables_resort()")
      option Latest
      option Price
    p Filter
    select#filter(onchange="rarity_filter(this.value)")
      option(value="All") All
      |  {{$data := getJSON "data/general.json"}}
      |  {{ range $data.rarity }}
      option(value="{{.}}") {{.}}
      | {{ end }}

